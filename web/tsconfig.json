{
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "baseUrl": "./",
      "paths": {
        "@": ["src"],
        "@/*": ["src/*"],
      },
      "sourceMap": true,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "ignoreDeprecations": "5.0",
      "suppressImplicitAnyIndexErrors": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"],
    "strict": false
  }